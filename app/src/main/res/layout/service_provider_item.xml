<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="end"
    android:paddingTop="4dp"
    android:paddingBottom="4dp">


    <ImageView
        android:id="@+id/serviceProviderImageView"
        android:layout_width="40dp"
        android:layout_height="48dp"
        android:layout_margin="8dp"
        android:src="@drawable/food"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/serviceNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="إسعافات أولية"
        android:textColor="#485465"
        android:textSize="32sp"
        app:layout_constraintEnd_toStartOf="@+id/serviceProviderImageView"
        app:layout_constraintTop_toTopOf="@id/serviceProviderImageView" />


    <TextView
        android:id="@+id/serviceNumberTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="إسعافات أولية"
        android:textColor="#858585"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/serviceNameTextView"
        app:layout_constraintStart_toStartOf="@+id/serviceNameTextView"
        app:layout_constraintTop_toBottomOf="@+id/serviceNameTextView" />

</android.support.constraint.ConstraintLayout>